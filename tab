    <tbody>
    <#if rows?? && rows?size gt 0>
      <#list rows as r>
        <#-- Zebra background computed server-side (Outlook ne gère pas :nth-child) -->
        <#assign rowBg = (r?index % 2 == 0)?then("#ffffff","#f9fafb")>

        <#-- Badge style inline (compat Outlook/Word) -->
        <#assign A = (r.action!"")?upper_case?trim>
        <#assign badgeStyle =
          (A == "CREATED" || A == "ADDED")?then(
            "display:inline-block;padding:4px 8px;border-radius:999px;background:#10b981;color:#ffffff;font-size:12px;line-height:1;",
          (A == "UPDATED" || A == "MODIFIED")?then(
            "display:inline-block;padding:4px 8px;border-radius:999px;background:#f59e0b;color:#111827;font-size:12px;line-height:1;",
          (A == "DELETED" || A == "REMOVED")?then(
            "display:inline-block;padding:4px 8px;border-radius:999px;background:#ef4444;color:#ffffff;font-size:12px;line-height:1;",
            "display:inline-block;padding:4px 8px;border-radius:999px;background:#94a3b8;color:#ffffff;font-size:12px;line-height:1;"
          ))) />

        <tr bgcolor="${rowBg}">
          <td style="padding:10px 12px;border-top:1px solid #e5e7eb;border-right:1px solid #e5e7eb;">${r.version!""?html}</td>
          <td style="padding:10px 12px;border-top:1px solid #e5e7eb;border-right:1px solid #e5e7eb;">${r.fieldName!""?html}</td>
          <td style="padding:10px 12px;border-top:1px solid #e5e7eb;border-right:1px solid #e5e7eb;">${r.oldValue?has_content?then(r.oldValue?string,"")?html}</td>
          <td style="padding:10px 12px;border-top:1px solid #e5e7eb;border-right:1px solid #e5e7eb;">${r.newValue?has_content?then(r.newValue?string,"")?html}</td>
          <td style="padding:10px 12px;border-top:1px solid #e5e7eb;">
            <!--[if mso]><span style="${badgeStyle}"><![endif]-->
            <span style="${badgeStyle}">${A?html}</span>
            <!--[if mso]></span><![endif]-->
          </td>
        </tr>
      </#list>
    <#else>
      <tr>
        <td colspan="5" style="padding:18px;text-align:center;color:#6b7280;">Aucune donnée à afficher.</td>
      </tr>
    </#if>
    </tbody>
  </table>

